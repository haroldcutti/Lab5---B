<Window x:Class="Lab05.EditarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab05"
        mc:Ignorable="d"
        Title="EditarCliente" Height="450" Width="800">
    <Grid>
        <Label Content="ID Cliente:"/>
        <TextBox x:Name="txtIdCliente" IsReadOnly="True"/>

        <Label Content="Nombre Compañía:" Margin="0,30,0,0"/>
        <TextBox x:Name="txtNombreCompañia" Margin="0,30,0,0"/>

        <Label Content="Nombre Contacto:" Margin="0,60,0,0"/>
        <TextBox x:Name="txtNombreContacto" Margin="0,60,0,0"/>

        <Label Content="Cargo Contacto:" Margin="0,90,0,0"/>
        <TextBox x:Name="txtCargoContacto" Margin="0,90,0,0"/>

        <Label Content="Dirección:" Margin="0,120,0,0"/>
        <TextBox x:Name="txtDireccion" Margin="0,120,0,0"/>

        <Label Content="Ciudad:" Margin="0,150,0,0"/>
        <TextBox x:Name="txtCiudad" Margin="0,150,0,0"/>

        <Label Content="Teléfono:" Margin="0,180,0,0"/>
        <TextBox x:Name="txtTelefono" Margin="0,180,0,0"/>

        <Button Content="Guardar Cambios" Margin="0,220,0,0" Click="GuardarCambios_Click"/>
    </Grid>
</Window>
